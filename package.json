{
  "name": "panel-de-control",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "main": "dist/electron/main.js",
  "scripts": {
    "dev": "vite",
    "dev:api": "tsx watch api/index.ts",
    "dev:electron": "concurrently \"npm run dev:api\" \"npm run dev\" \"wait-on http://localhost:5173 && electron .\"",
    "build:ui": "vite build",
    "build:api": "tsc -b api/tsconfig.json",
    "build:electron": "tsc -p tsconfig.electron.json",
    "build": "npm run build:api && npm run build:ui && npm run build:electron && electron-builder",
    "lint": "eslint .",
    "start:api": "node dist/api/index.js"
  },
  "dependencies": {
    "better-sqlite3": "^12.2.0",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "lucide-react": "^0.525.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-icons": "^5.5.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@types/better-sqlite3": "^7.6.13",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/node": "^24.0.13",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.6.0",
    "concurrently": "^9.2.0",
    "electron": "^37.2.1",
    "electron-builder": "^26.0.12",
    "eslint": "^9.30.1",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.3",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.35.1",
    "vite": "^7.0.4",
    "wait-on": "^8.0.3"
  },
  "build": {
    "appId": "com.tu-org.panel",
    "files": [
      "dist/**",
      "dist/api/**",
      "dist/electron/**",
      "api/**",
      "node_modules/**",
      "package.json"
    ],
    "directories": {
      "buildResources": "assets"
    }
  }
}
