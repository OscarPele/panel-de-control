// api/tsconfig.json
{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "../dist/api",      // carpeta de salida
    "rootDir": ".",               // para mantener la estructura de api/
    "module": "ESNext",
    "target": "ES2020",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "declaration": false,
    "skipLibCheck": true,
    "noEmit": false               // asegúrate de que sí emite .js
  },
  "include": [
    "**/*.ts"                     // todos los TS en api/
  ]
}
