// tsconfig.electron.json
{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "dist/electron",    // carpeta destino para los .js de Electron
    "rootDir": "electron",        // solo los .ts bajo electron/
    "composite": false,
    "module": "ESNext",
    "target": "ES2020",
    "moduleResolution": "node",
    "esModuleInterop": true
  },
  "include": [
    "electron/**/*.ts"
  ]
}
